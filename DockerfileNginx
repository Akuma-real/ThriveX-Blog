# 使用官方的Node.js镜像作为基础镜像
FROM nginx
LABEL authors="坐公交也用券"
LABEL HOME="https://gitee.com/liumou_site"
LABEL PROJECT="https://github.com/LiuYuYang01/ThriveX-Blog"
LABEL BUILD_DATE="2025-01-09"
ENV TZ=Asia/Shanghai
ARG HTML_VERSION=2.1.5
ENV HTML_VERSION=${HTML_VERSION}
RUN ln -sf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone


# # 设置工作目录
WORKDIR /thrive

# 复制package.json和package-lock.json
COPY ../package*.json .


# 复制所有文件到工作目录
COPY public /thrive/public
COPY src /thrive/src

# 安装nodejs
RUN apt update && apt install -y nodejs npm && npm install -g npm
# 安装依赖
RUN npm install

COPY docker/thrive.conf /etc/nginx/conf.d/thrive.conf
COPY docker/run.sh /thrive/run.sh
RUN chmod 777 /thrive/run.sh

# 暴露应用运行的端口
EXPOSE 80

CMD ["/thrive/run.sh"]